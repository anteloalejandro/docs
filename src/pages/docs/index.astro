---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";

type Link = {
  href: string;
  title: string;
  abstract?: string;
}

const links: Link[] = [
  {
    href: '/docs/book-of-c',
    title: 'The Book of C',
    abstract: 'The Book of C rendered in a more responsive and mobile-friendly way.'
  },
  {
    href: '/docs/other',
    title: 'Other Docs'
  }
]
---

<BaseLayout title="Docs">
  <div class="grid">
    {links.map(l => {
      return <a href={l.href}>
        <h2>{l.title}</h2>
        {
          l.abstract &&
          <small>{l.abstract}</small>
        }
      </a>
    })}
  </div>
</BaseLayout>

<style lang="scss">
  .grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-auto-flow: row;
    gap: 2rem;
    padding: 2rem;

    @media (max-width: 768px) {
      grid-template-columns: 1fr;
    }

    a {
      color: inherit;
      display: grid;
      gap: 1rem;
      align-content: center;
      padding: 3rem;
      background-color: var(--bg-2);
      text-decoration: none;
      border-radius: var(--radius);

      h2 {
        margin: 0;
        color: var(--hl-1);
      }
    }
  }
</style>
