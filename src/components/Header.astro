---
import Toggle from "./Toggle.astro";
---
<header>
  <Toggle/>
  <h1>
    <a href="/docs">Documentation</a>
  </h1>
</header>

<style lang="scss">
  header {
    display: grid;
    grid-template-columns: 3rem 1fr 3rem;
    grid-auto-flow: column;
    justify-items: center;
    align-content: stretch;
    z-index: 100;
    background-color: black;
    color: white;
  }
  h1 {
    justify-self: center;
    align-self: center;
    margin: 0;
    font-size: 2rem;
    grid-column: 2/3;
    a {
      color: inherit;
      text-decoration: none;
    }
  }
</style>
