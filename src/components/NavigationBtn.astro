---
import { MarkdownInstance } from 'astro';

type Props = {
  direction: 'previous' | 'next'
  doc: MarkdownInstance<any>
}

const { direction, doc } = Astro.props
---

<a href={doc.url} class="navigation-btn">
  <span class={ "icon " + (
    direction == 'previous'
      ? "prev-navigation-btn"
      : "next-navigation-btn"
  )}>
    <!-- <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512"><path d="M310.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-192 192c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L242.7 256 73.4 86.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l192 192z"/></svg> -->
  </span>
  <strong>
    {doc.frontmatter.title || doc.url}
  </strong>
</a>

<style lang="scss">
  .navigation-btn {
    display: flex;
    gap: 1rem;

    .icon {
      --svg: url('/img/angle-right-solid.svg');
      color: black;
      &.prev-navigation-btn {
        rotate: 180deg;
      }
      &.next-navigation-btn {
        order: 1;
      }
    }



  }
</style>
